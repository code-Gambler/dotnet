@model SDP2241A2.Models.InvoiceWithDetailViewModel

@{
    ViewBag.Title = "Details for Invoice #" + Model.InvoiceId;
}

<h2>@ViewBag.Title</h2>

<div>
    <dl class="row">
        <!-- Customer Info Section -->
        <dt class="col-sm-2">
            Customer Info
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId) <br />
            @Html.DisplayFor(model => model.CustomerFirstName) @Html.DisplayFor(model => model.CustomerLastName) <br />
            @Html.DisplayFor(model => model.CustomerState), @Html.DisplayFor(model => model.CustomerCountry)
        </dd>
    </dl>

    <hr />

    <dl class="row">
        <!-- Billing Address Section -->
        <dt class="col-sm-2">
            Billing Address
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BillingAddress) <br />
            @Html.DisplayFor(model => model.BillingCity), @Html.DisplayFor(model => model.BillingState) <br />
            @Html.DisplayFor(model => model.BillingCountry), @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>
    </dl>

    <hr />

    <dl class="row">
        <!-- Invoice Section -->
        <dt class="col-sm-2">
            Sales Rep
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmployeeFirstName) @Html.DisplayFor(model => model.CustomerEmployeeLastName)
        <dt class="col-sm-2">
            Invoice Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>

        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>
</div>

<h4>Line Items</h4>
<table class="table table-striped">
    <tr>
        <th>
            Line ID
        </th>
        <th>
            Track
        </th>
        <th>
            Unit Price
        </th>
        <th>
            Quantity
        </th>
        <th>
            Line Total
        </th>
    </tr>

    @foreach (var item in Model.InvoiceLines)
    {

        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.InvoiceLineId)
            </td>
            <td>
                <dl>
                    <div class="row">
                        <dt class="col-sm-2">
                            Name:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.TrackName)
                        </dd>
                    </div>
                    <div class="row">
                        <dt class="col-sm-2">
                            Album:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.TrackAlbumTitle)
                        </dd>
                    </div>
                    <div class="row">
                        <dt class="col-sm-2">
                            Artist:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.TrackAlbumArtistName)
                        </dd>
                    </div>
                    <div class="row">
                        <dt class="col-sm-2">
                            Composer(s):
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.TrackComposer)
                        </dd>
                    </div>
                    <div class="row">
                        <dt class="col-sm-2">
                            Genre:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.TrackGenreName)
                        </dd>
                    </div>
                    <div class="row">
                        <dt class="col-sm-2">
                            Media Type:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(modelItem => item.TrackMediaTypeName)
                        </dd>
                    </div>

                </dl>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinePrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LinePrice)
            </td>
        </tr>
    }
</table>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>

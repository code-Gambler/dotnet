@model IEnumerable<SDP2241A2.Models.TrackWithDetailViewModel>

@{
    string actionName = ViewContext.RouteData.GetRequiredString("action");
    string title = "All Tracks";

    switch (actionName)
    {
        case "Top50Smallest":
            title = "Smallest Tracks"; break;
        case "CantrellStaley":
            title = "Cantrell & Staley Tracks"; break;
        case "Top50Longest":
            title = "Longest Tracks"; break;
        case "BluesJazz":
            title = "Blues & Jazz Tracks"; break;

    }


    ViewBag.Title = title;
}

<style>
    .price {
        white-space: nowrap;
    }
</style>

<h2>@title</h2>

<p>
    @Html.ActionLink("All Tracks", "Index") |
    @Html.ActionLink("Blues & Jazz Tracks", "BluesJazz") |
    @Html.ActionLink("Cantrell & Staley Tracks", "CantrellStaley") |
    @Html.ActionLink("Longest Tracks", "Top50Longest") |
    @Html.ActionLink("Smallest Tracks", "Top50Smallest")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Composer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Milliseconds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bytes)
        </th>
        <th class="price">
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlbumTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GenreName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Composer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Milliseconds)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bytes)
            </td>
            <td class="price">
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlbumTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
        </tr>
    }

</table>
